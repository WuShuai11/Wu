/**index.wxss**/
page{
  min-height: 100%;
  background: #FAFAFA;
}
.one_page{
  height: 100vh;
  overflow: hidden;
}
.video_box{
  position: relative;
}
.video_box video{
  display: block;
  height: 420rpx;
  width: 100%;
}
.video_box .more{
  position: absolute; 
  top:20rpx;
  right:20rpx;
}
.video_box .more navigator{
  height:42rpx;
  background:rgba(0,0,0,1);
  border-radius:23rpx;
  opacity:0.4;
  text-align: center;
  margin-right: 16rpx;
  display: inline-block;
  line-height: 42rpx;
  padding: 0 20rpx;
}
.video_box .more navigator:last-child{
  margin-right: 0;
}
.video_box .more navigator image{
  display: inline-block;
  width:38rpx;
  height:28rpx;
  vertical-align: top;
  margin: 7rpx auto;
}
.video_box .more navigator view{
  display: inline-block;
  height:100%;
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  vertical-align: top;
  margin-left:2rpx;
}
.info{
  background: #fff;
  border-radius:20rpx 20rpx 0px 0px;
  position: relative;
}
.info .info_l{
  float: left;
  margin-left: 34rpx;
}
.info .info_l .address{
  height:38rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:38rpx;
  margin: 30rpx 0 8rpx;
}
.info .info_l .desc{
  height:34rpx;
  font-size:24rpx;
  font-weight:300;
  color:rgba(153,153,153,1);
  line-height:34rpx;
}
.info .info_r{
  width: 16rpx;
  height: 26rpx;
  float: right;
  margin: 38rpx 32rpx 0 0;
}
.menu{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 11rpx;
  background: #fff;
}
.menu .menu_list{
  flex: 1;
  text-align: center;
  margin: 38rpx 0 28rpx;
}
.menu .menu_list image{
  width: 72rpx;
  height: 72rpx;
}
.menu .menu_list view{
  height:36rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(53,53,53,1);
  line-height:36rpx;
}
.banner{
  height: 260rpx;
  width: 100%;
  position: relative;
  background: #fff;
  
}
.banner .swiper{
  width: 686rpx;
  height: 240rpx;
  margin: 0 auto 20rpx;

}
.banner .swiper image{
  height: 100%;
  width: 100%;
}
.banner .dots{
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}
.banner .dots .dot{
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: rgba(53,53,53,.4);
  border-radius: 50%;
  margin-right: 8rpx;
}
.banner .dots .active{
  width: 30rpx;
  height: 8rpx;
  background: rgba(53,53,53,1);
  border-radius: 0;
}
.title_module{
  position: relative;
}
.title_module .title{
  height: 84rpx;
  margin: 0 auto;
  display: block;
}
.title_module .more{
  position: absolute;
  bottom:0;
  right: 32rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.goods .title_module{
  padding-top: 36rpx;
}
.goods .goods_box{
  padding: 28rpx 32rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: 2rpx;
}
.goods .goods_box:after{
  content: '';
  width: 220rpx;
  border:1px solid transparent;
}
.goods .goods_box .goods_box_item{
  width: 220rpx;
  margin-bottom: 12rpx;
}
.goods .goods_box .goods_box_item .goods_img{
  width: 220rpx;
  height: 168rpx;
