}
.goods .goods_box .goods_box_item .goods_cont{
  text-align: center;
  height: 170rpx;
  background: #fff;
}
.goods .goods_box .goods_box_item .goods_cont .name{
  height:36rpx;
  font-size:26rpx;
  font-weight:500;
  color:rgba(53,53,53,1);
  line-height:36rpx;
  padding-top: 12rpx;
}
.goods .goods_box .goods_box_item .goods_cont .price{
  height:42rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,101,51,1);
  line-height:42rpx;
}
.goods .goods_box .goods_box_item .goods_cont .market_price{
  height:28rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(178,178,178,1);
  line-height:28rpx;
  margin: 4rpx 0 8rpx;
}
.goods .goods_box .goods_box_item .goods_cont .count{
  height:28rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(178,178,178,1);
  line-height:28rpx;
}
.goods .goods_box .goods_box_item .goods_cont .market_price text{
  text-decoration: line-through;
}
